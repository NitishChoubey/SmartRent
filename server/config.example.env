# SmartRent Server Configuration
# Copy this file to .env and update the values

NODE_ENV=development
PORT=4000

# Database Configuration
# MongoDB for Users & Auth
MONGO_URI=mongodb://localhost:27017/smartrent

# PostgreSQL for Products & Rentals
POSTGRES_URL=postgresql://username:password@localhost:5432/smartrent_products
# For development, you can use:
# POSTGRES_URL=postgresql://postgres:password@localhost:5432/smartrent_products

# JWT Configuration  
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Cookie Configuration
COOKIE_NAME=sr_refresh_token
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_PATH=/

# Email Configuration (for OTP)
GMAIL_USER=your-gmail@gmail.com
GMAIL_PASS=your-app-password

# CORS Configuration
CLIENT_ORIGIN=http://localhost:5173,http://localhost:5174

# Admin Setup (for seed script)
ADMIN_EMAIL=admin@smartrent.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=SmartRent Admin

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
